use std::str::FromStr;
use crate::types::*;
grammar;

pub Expr: crate::types::Expr = {
  <t:Term> => Expr::TermExpr(t),
  <t:Expr> "+" <u:Term> => Expr::BinExpr(Box::new(t), Box::new(Expr::TermExpr(u)))
};

Term: Term = {
    <n:Num> => Term(n),
    "(" <t:Term> ")" => t,
};

Num: i32 = <s:r"[0-9]+"> => i32::from_str(s).unwrap();
